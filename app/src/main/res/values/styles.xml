<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary_normal</item>
    <item name="colorPrimaryDark">@color/primary_dark_normal</item>
    <item name="colorAccent">@color/accent_normal</item>
    <item name="actionBarStyle">@style/Widget.Inspector.ActionBar</item>
  </style>

  <style name="Theme.Inspector.Transparent" parent="android:Theme.Translucent.NoTitleBar">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:windowIsFloating">true</item>
  </style>

  <style name="Widget.Inspector.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
    <item name="android:title">@string/app_name</item>
  </style>
</resources>
